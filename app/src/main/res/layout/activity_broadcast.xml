<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".br.BroadcastActivity">

    <Button
        android:id="@+id/btnSendCustomBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_custom_broadcast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSendUsingLocalBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_using_loca_lbroadcast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSendCustomBroadcast" />

    <Button
        android:id="@+id/btnSendOrderedBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_ordered_broadcast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSendUsingLocalBroadcast" />


</androidx.constraintlayout.widget.ConstraintLayout>